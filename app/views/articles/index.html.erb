<div class= "container">
  <div class= "row">
    <div class="col-sm-8 col-sm-offset-2">
      <ul>
        <% @articles.each do |article| %>
          <li> <h2> <i class="bi bi-file-earmark-text icon-grey"></i> <%= link_to article.title, article_path(article), class: "article-title"%> </h2>
              <p> <%=  article.content %> </p>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
